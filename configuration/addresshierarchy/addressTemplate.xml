<org.openmrs.layout.address.AddressTemplate>
    <nameMappings class="properties">
        <property name="country" value="Country"/>
        <property name="address1" value="Region"/>
        <property name="address2" value="District"/>
        <property name="cityVillage" value="Village"/>
        <property name="address3" value="House No./Street"/>
        <property name="postalCode" value="Digital Address"/>
        <property name="longitude" value="Longitude"/>
        <property name="latitude" value="Latitude"/>
    </nameMappings>
    <sizeMappings class="properties">
        <property name="country" value="40"/>
        <property name="address1" value="40"/>
        <property name="address2" value="40"/>
        <property name="cityVillage" value="40"/>
        <property name="address3" value="40"/>
        <property name="postalCode" value="40"/>
        <property name="longitude" value="40"/>
        <property name="latitude" value="40"/>
    </sizeMappings>
    <elementDefaults class="properties">
        <property name="country" value="Ghana"/>
    </elementDefaults>
    <lineByLineFormat>
        <string>latitude</string>
        <string>longitude</string>
        <string>postalCode</string>
        <string>cityVillage</string>
        <string>address3</string>
        <string>address2</string>
        <string>address1</string>
        <string>country</string>
    </lineByLineFormat>
</org.openmrs.layout.address.AddressTemplate>